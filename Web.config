<?xml version="1.0"?>
<configuration>
  
  <!-- Connection Strings -->
  <connectionStrings>
    <!-- 
      Connection to SQL Server
      - Data Source: Your SQL Server instance name
      - Initial Catalog: CRUDDemoDB
      - Integrated Security: Windows Authentication
      Update this connection string based on your SQL Server setup
    -->
    <add name="DemoConnectionString" 
         connectionString="Data Source=TAVLAD\SQLEXPRESS01;Initial Catalog=CRUDDemoDB;Integrated Security=True;" 
         providerName="System.Data.SqlClient"/>
  </connectionStrings>

  <appSettings>
    <!-- Disable unobtrusive validation mode to avoid jQuery dependency -->
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
    <!-- Add application settings here -->
  </appSettings>

  <system.web>
    <!-- Compilation settings -->
    <compilation debug="true" strict="false" explicit="true" targetFramework="4.8">
      <assemblies>
        <add assembly="System.Data, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"/>
        <add assembly="System.Configuration, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a"/>
      </assemblies>
    </compilation>

    <!-- HTTP Runtime settings -->
    <httpRuntime targetFramework="4.8" maxRequestLength="10240" executionTimeout="3600"/>

    <!-- Custom errors (set to RemoteOnly for production) -->
    <customErrors mode="Off"/>

    <!-- Session state -->
    <sessionState mode="InProc" timeout="20"/>

    <!-- Pages settings -->
    <pages controlRenderingCompatibilityVersion="4.0" clientIDMode="AutoID">
      <namespaces>
        <add namespace="System.Web.UI"/>
        <add namespace="System.Web.UI.WebControls"/>
      </namespaces>
    </pages>

    <!-- Authentication (set up as needed) -->
    <authentication mode="None"/>

    <!-- Globalization settings -->
    <globalization culture="en-US" uiCulture="en-US"/>

  </system.web>

  <system.webServer>
    <!-- Default document -->
    <defaultDocument enabled="true">
      <files>
        <clear/>
        <add value="Pages/DemoItems.aspx"/>
        <add value="Default.aspx"/>
      </files>
    </defaultDocument>

    <!-- URL Rewrite rules (optional) -->
    <rewrite>
      <rules>
        <!-- Add URL rewrite rules here if needed -->
      </rules>
    </rewrite>

    <!-- Static content caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00"/>
    </staticContent>

    <!-- Error pages for IIS -->
    <httpErrors errorMode="Detailed"/>

    <!-- Security headers (recommended for production) -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff"/>
        <add name="X-Frame-Options" value="SAMEORIGIN"/>
        <add name="X-XSS-Protection" value="1; mode=block"/>
      </customHeaders>
    </httpProtocol>

  </system.webServer>

  <!-- Code Access Security -->
  <system.codedom>
    <compilers>
      <compiler language="vb;vbs;visualbasic;vbscript" 
                extension=".vb" 
                type="Microsoft.VisualBasic.VBCodeProvider, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" 
                warningLevel="4">
        <providerOption name="CompilerVersion" value="v4.0"/>
        <providerOption name="OptionInfer" value="true"/>
        <providerOption name="WarnAsError" value="false"/>
      </compiler>
    </compilers>
  </system.codedom>

</configuration>

